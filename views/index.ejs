<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Facebook MVC</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="title-page p-4">
      <p class="h1">Welcome to Facebook</p>
    </div>
    <!-- Post -->
    <form method="POST" action="/add-message">
      <div class="name-post p-4" style="width: 50%">
        <div class="form-floating">
          <input
            class="form-control"
            id="floatingTextarea"
            name="name"
            type="text"
            maxlength="15"
          />
          <label for="floatingTextarea">Name</label>
          <div id="arealHelp" class="form-text">
            No longer than 15 characters.
          </div>
        </div>
      </div>
      <div class="post-message p-4" style="width: 50%">
        <div class="form-floating">
          <textarea
            class="form-control"
            id="floatingTextarea2"
            name="message"
            style="height: 100px"
            maxlength="40"
          ></textarea>
          <label for="floatingTextarea2">Message</label>
          <div id="areaHelp" class="form-text">
            No longer than 40 characters.
          </div>
        </div>
      </div>
      <div class="btn-add-post p-4">
        <button type="submit" class="btn btn-primary">Add a post</button>
      </div>
    </form>
    <div class="posts ml-4">
      <% if (result.length > 0 ) { %>
      <h1 class="last-posts p-4">Last posts</h1>
      <% result.forEach(element => { %>
      <div class="card" style="width: 18rem">
        <div class="card-body p-4">
          <h5 class="card-title"><%= element.name %></h5>
          <small><%= element.createdAt.toLocaleString() %></small>
          <p class="card-text"><%= element.message %></p>
          <a href="/feed/<%= element.id %>" class="card-link">See more</a>
        </div>
      </div>
      <% }); %> <% } %>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
